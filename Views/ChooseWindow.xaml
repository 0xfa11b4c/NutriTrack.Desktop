<Window x:Class="NutriTrack.Desktop.Views.ChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NutriTrack"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="640" Width="900"
        WindowStyle="None"
		AllowsTransparency="True"
        Background="Transparent">

	<Grid Margin="20">
		<Border Style="{StaticResource WindowBorder}">
			<Grid>

				<!-- Шаг 1: Пол -->
				<StackPanel x:Name="Step1Panel" VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="Выберите ваш пол" FontSize="20" Margin="0 0 0 20" Foreground="White" HorizontalAlignment="Center"/>
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<Button Content="Мужчина" Width="100" Margin="5" Click="Male_Click"/>
						<Button Content="Женщина" Width="100" Margin="5" Click="Female_Click"/>
					</StackPanel>
				</StackPanel>

				<!-- Шаг 2: Физические данные -->
				<StackPanel x:Name="Step2Panel" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="Введите физические данные" FontSize="20" Foreground="White" Margin="0 0 0 20" HorizontalAlignment="Center"/>

					<TextBlock Text="Рост (см)" Foreground="White"/>
					<TextBox x:Name="HeightBox" Width="200" Margin="0 0 0 10"/>

					<TextBlock Text="Вес (кг)" Foreground="White"/>
					<TextBox x:Name="WeightBox" Width="200" Margin="0 0 0 10"/>

					<TextBlock Text="Возраст" Foreground="White"/>
					<TextBox x:Name="AgeBox" Width="200" Margin="0 0 0 10"/>

					<TextBlock Text="Процент жира (опц.)" Foreground="White"/>
					<TextBox x:Name="FatBox" Width="200" Margin="0 0 0 20"/>

					<Button Content="Далее" Width="150" Click="Continue_Click"/>
				</StackPanel>

				<!-- Шаг 3: Цель -->
				<StackPanel x:Name="Step3Panel" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="Выберите цель" FontSize="20" HorizontalAlignment="Center" Foreground="White" Margin="0 0 0 20"/>

					<WrapPanel x:Name="GoalWrapPanel" HorizontalAlignment="Center">
						<Button Content="Похудеть" Tag="Cut" Click="Goal_Click" Margin="5" Width="110" Height="70" Opacity="0.5"/>
						<Button Content="Поддерживать" Tag="Maintain" Click="Goal_Click" Margin="5" Width="110" Height="70" Opacity="0.5"/>
						<Button Content="Набрать массу" Tag="Bulk" Click="Goal_Click" Margin="5" Width="110" Height="70" Opacity="0.5"/>
						<Button Content="Соревнования" Tag="Dry" Click="Goal_Click" Margin="5" Width="110" Height="70" Opacity="0.5"/>
						<Button Content="Мед. коррекция" Tag="Medical" Click="Goal_Click" Margin="5" Width="110" Height="70" Opacity="0.5"/>
					</WrapPanel>

					<Button Content="Далее" Margin="20" Width="150" Click="ContinueToAllergy_Click"/>
				</StackPanel>

				<!-- Шаг 4: Аллергии и заболевания -->
				<StackPanel x:Name="Step4Panel" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="Аллергии и заболевания" FontSize="20" Foreground="White" Margin="0 0 0 20" HorizontalAlignment="Center"/>

					<TextBlock Text="Аллергии" Foreground="White"/>
					<StackPanel Orientation="Horizontal">
						<TextBox x:Name="AllergyInput" Width="200" KeyDown="AllergyInput_KeyDown" Foreground="White"/>
						<Button Content="+" Width="30" Margin="5 0" Click="AddAllergy_Click" Foreground="White"/>
					</StackPanel>
					<WrapPanel x:Name="AllergyTags" Margin="0 5" />

					<TextBlock Text="Хронические заболевания" Foreground="White" Margin="10 0 0 0"/>
					<StackPanel Orientation="Horizontal">
						<TextBox x:Name="ConditionInput" Width="200" KeyDown="ConditionInput_KeyDown"/>
						<Button Content="+" Width="30" Margin="5 0" Click="AddCondition_Click"/>
					</StackPanel>
					<WrapPanel x:Name="ConditionTags" Margin="0 5"/>

					<Button Content="Далее" Margin="20" Width="150" Click="ContinueToActivity_Click"/>
				</StackPanel>

				<!-- Шаг 5: Уровень активности -->
				<StackPanel x:Name="Step5Panel" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="Уровень активности" FontSize="20" HorizontalAlignment="Center" Foreground="White" Margin="0 0 0 20"/>

					<ComboBox x:Name="ActivityComboBox" Width="220" SelectedIndex="2">
						<ComboBoxItem Content="Малоподвижный" Tag="Low"/>
						<ComboBoxItem Content="Лёгкий" Tag="Light"/>
						<ComboBoxItem Content="Средний" Tag="Moderate"/>
						<ComboBoxItem Content="Высокий" Tag="High"/>
						<ComboBoxItem Content="Очень высокий" Tag="Very High"/>
					</ComboBox>

					<Button Content="Завершить" Margin="20" Width="150" Click="OpenMain_Click"/>
				</StackPanel>

			</Grid>
		</Border>
	</Grid>
</Window>
